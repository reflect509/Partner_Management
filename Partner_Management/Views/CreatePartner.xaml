<Page x:Class="Partner_Management.Views.CreatePartner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Partner_Management.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePartner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="30" Text="Создание партнера" HorizontalAlignment="Center"/>

        <Button Grid.Column="2" Grid.Row="0" Content="⏪" MinHeight="50" MinWidth="50" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{StaticResource AccentColor}"
                Click="BackButton_Click"/>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Background="{StaticResource SecondaryColor}">

            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                <TextBox Name="PartnerNameTextBox" Text="Введите тип партнера"/>
                <TextBox IsReadOnly="True" Text=" | "/>
                <TextBox Name="PartnerTypeTextBox" Text="Введите имя партнера"/>
            </StackPanel>

            <TextBox x:Name="CEONameTextBox" Grid.Column="0" Grid.Row="1" Text="Введите директора"/>
            <TextBox x:Name="PhoneTextBox" Grid.Column="0" Grid.Row="2" Text="Введите номер телефона(10 цифр)"/>
            <TextBox x:Name="RatingTextBox" Grid.Column="0" Grid.Row="3" Text="Введите рейтинг"/>
        </StackPanel>
    </Grid>    
</Page>
